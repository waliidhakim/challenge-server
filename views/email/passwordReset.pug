extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Please use this link or the button below to change your password : #{url}.

  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target=`${url}`) Reset your password
  p If you didn't forget your password, please ignore this email!
